<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    tools:context=".ui.StatisticsFragment">

    <TextView
        android:id="@+id/userCityTv"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        tools:text="Almaty"
        android:textAppearance="?textAppearanceBody1"
        style="@style/user_info_tv_first_row"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infectedPlusTv1"
                style="@style/user_info_tv_first_row"
                android:textAppearance="?textAppearanceBody1"
                android:text="Infected PCR +"/>

            <TextView
                android:id="@+id/infectedPlusTv"
                style="@style/user_info_tv_second_row"
                android:textColor="@android:color/holo_red_dark"
                tools:text="103123" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/user_info_tv_first_row"
                android:textAppearance="?textAppearanceBody1"
                android:text="Recovered PCR +"/>

            <TextView
                style="@style/user_info_tv_second_row"
                android:id="@+id/recoveredPlusTv"
                android:textColor="@android:color/holo_green_dark"
                tools:text="123123" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/user_info_tv_first_row"
                android:textAppearance="?textAppearanceBody1"
                android:text="Infected PCR -"/>

            <TextView
                android:id="@+id/infectedMinusTv"
                style="@style/user_info_tv_second_row"
                android:textColor="@android:color/holo_red_dark"
                tools:text="123123123" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/user_info_tv_first_row"
                android:textAppearance="?textAppearanceBody1"
                android:text="Recovered PCR -"/>

            <TextView
                android:id="@+id/recoveredMinusTv"
                style="@style/user_info_tv_second_row"
                android:textColor="@android:color/holo_green_dark"
                tools:text="12312312" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/user_info_tv_first_row"
                android:textAppearance="?textAppearanceBody1"
                android:text="Date"/>

            <TextView
                android:id="@+id/covid_date"
                style="@style/user_info_tv_second_row"
                tools:text="12312312" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaccination"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:textAppearance="?textAppearanceBody1"
        style="@style/user_info_tv_first_row"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/user_info_tv_first_row"
                android:textAppearance="?textAppearanceBody1"
                android:text="Vaccinated"/>

            <TextView
                android:id="@+id/vaccinated"
                style="@style/user_info_tv_second_row"
                android:textColor="@android:color/holo_red_dark"
                tools:text="12312312" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/user_info_tv_first_row"
            android:textAppearance="?textAppearanceBody1"
            android:text="Double Vaccinated"/>

        <TextView
            android:id="@+id/double_vaccinated"
            style="@style/user_info_tv_second_row"
            android:textColor="@android:color/holo_green_dark"
            tools:text="12312312" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/user_info_tv_first_row"
            android:textAppearance="?textAppearanceBody1"
            android:text="Date"/>

        <TextView
            android:id="@+id/vaccinated_date"
            style="@style/user_info_tv_second_row"
            tools:text="12312312" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</LinearLayout>